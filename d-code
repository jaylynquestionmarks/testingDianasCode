package org.firstinspires.ftc.teamcode;


import com.qualcomm.robotcore.eventloop.opmode.TeleOp;
import com.qualcomm.robotcore.hardware.DcMotor;
import com.qualcomm.robotcore.hardware.Servo;


import org.firstinspires.ftc.robotcontroller.external.samples.BasicOpMode_Iterative;
@TeleOp(name = "Example")




// needed before all your code


public class motorTest extends BasicOpMode_Iterative {
   private DcMotor motor1 = null;
   private DcMotor motor2 = null;
//    so that the motors don't move; for safety ^


   @Override
   public void init() {
       final int COUNTS_PER_MOTOR_REV = 1120;
       motor1 = hardwareMap.dcMotor.get("rf");
       motor2 = hardwareMap.dcMotor.get("lf");


       motor2.setDirection(DcMotor.Direction.REVERSE);
   }


   @Override
   public void loop() {


       if ((gamepad1.left_stick_x == 0) && (gamepad1.right_stick_y == 0) && (!gamepad1.right_bumper) && (!gamepad1.left_bumper)) {
           motor1.setPower(0);
           motor2.setPower(0);
       }
   }


   //forward
   if (gamepad1.right_stick_y != 0) {
       double power = gamepad1.left_stick_y;
       motor1.setPower(1 * power);
       motor2.setPower(1 * power);
       telemetry.addData("left stick y", "value", gamepad1.right_stick_y);
       // gamepad1.right_stick_y is the value of power in the line above
   }


   //turn
   if(gamepad1.left_stick_x !=0)


   {
       double turn = gamepad1.left_stick_x;
       motor1.setPower(-1);
       motor2.setPower(1);
       telemetry.addData("left stick x", "value", gamepad1.left_stick_x);
   }
}
